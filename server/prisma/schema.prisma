generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Creator {
  id Int @id @default(autoincrement())
  createAt Int
  updateAt Int

  nickname String // 用户名
  avatar String
  email String
}

model Novel {
  id Int @id @default(autoincrement())
  createAt Int
  updateAt Int

  cover String?

  title String

  chapters Chapter[]
}

model Chapter {
  id    Int @id @default(autoincrement())
  title String
  round Int 

  
  novel Novel @relation(fields: [novelId], references: [id])
  novelId Int
}
